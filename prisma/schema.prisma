// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  
  @@map("users")
}

model Membro {
  id           String   @id @default(cuid())
  nome         String
  grau         String
  status       String
  
  // Campos comuns (n찾o obrigat처rios no schema, validados no c처digo)
  cim          String?
  cargo        String?
  assinaturaUrl String?  // URL da imagem da assinatura
  
  // Datas - todas opcionais no schema, validadas no c처digo conforme grau
  dataIniciacao      String?
  dataFiliacao       String?
  dataPassagemGrau   String?
  dataElevacao       String?
  
  dataCadastro DateTime @default(now())
  
  @@map("membros")
}